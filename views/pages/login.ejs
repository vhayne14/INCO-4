<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Scheduling Website</title>
    <%- include('../partials/materialize') %>
</head>
<body>
    



    <main>


        <div class="container">
            <div class="row">
                <div class="col s12">
                    <div class="card">
                        <div class="card-content">
                            <span class="card-title center">Log in</span>
                            <div class="row">

                                <% if (typeof message !== 'undefined') { %>
                                    <p style="color: red"><%= message %></p>
                                  <% } %>
                                
                                    <form method= "POST" action="/login">
                                    <div>
                                        <label for="email">Email</label>
                                        <input id="email" type="email" name="email">
                                    </div>
                                    <div>
                                        <label for="password">Password</label>
                                        <input id="password" type="password" name="password">
                                    </div>
                                    <div class = "center">
                                        <button type = "submit" class = "btn waves-effect waves-light">Log in</button>
                                    </form>
                                        <a href="http://localhost:5000/signup" class="waves-effect waves-light btn">Sign up</a>
                                       
                                    </div>
                                    
                                    
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>












    </main>
    
</body>
</html>