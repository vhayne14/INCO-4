<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%- include('../partials/materialize') %>
    <title>New Schedule</title>
</head>
<body>
    <main>
        <%- include('../partials/header') %>
        <div class="container">
            <div class="row">
                <div class="col s12">
                    <div class="card">
                        <div class="card-content">
                            <span class="card-title center">New Schedule</span>
                            <div class="row">
                                <form action="/new" method="POST">
                                    <div>
                                        <label for="user_id">User ID:</label>
                                        <input id="user_id" type="number" name="user_id" min="0" value="3">
                                      </div>
                            
                                      <div>
                                          <label for="day">Day:</label>
                                          <input id="day" type="number" name="day" min="1" max="7" value="3">
                                      </div>
                              
                                      <div>
                                          <label for="start_time">Start:</label>
                                          <input id="start_time" type="time" name="start_time" required>
                                      </div>
                              
                                      <div>
                                          <label for="end_time">End:</label>
                                          <input id="end_time" type="time" name="end_time" required>
                                      </div>
                                      
                                    <button type="submit">Submit</button>
                                
                                </form>



    
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <%- include('../partials/schedules') %>
    
    </main>




    
</body>
</html>